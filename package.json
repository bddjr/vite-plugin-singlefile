{
	"name": "vite-plugin-singlefile",
	"version": "2.1.0",
	"description": "Vite plugin for inlining all JavaScript and CSS resources",
	"author": "bddjr",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">18.0.0"
	},
	"scripts": {
		"dev": "rimraf dist && tsc -w --p tsconfig.json",
		"build": "rimraf dist && tsc -p tsconfig.json",
		"test": "vitest",
		"test:watch": "vitest watch",
		"lint": "eslint src/index.ts"
	},
	"keywords": [
		"vite",
		"inline",
		"css",
		"SFA",
		"single-file"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bddjr/vite-plugin-singlefile"
	},
	"bugs": {
		"url": "https://github.com/bddjr/vite-plugin-singlefile/issues"
	},
	"homepage": "https://github.com/bddjr/vite-plugin-singlefile",
	"dependencies": {
		"micromatch": "^4.0.7"
	},
	"peerDependencies": {
		"rollup": "^4.18.0",
		"vite": "^5.3.1"
	},
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/micromatch": "^4.0.7",
		"@types/node": "^20.14.6",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"eslint": "^8.57.0",
		"vitest": "^1.6.0",
		"rimraf": "^5.0.7",
		"typescript": "^5.4.5"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5",
		"printWidth": 180
	}
}
